@using SFA.DAS.AdminService.Common.Extensions;
@using SFA.DAS.RoatpGateway.Domain;
@using SFA.DAS.RoatpGateway.Web.ViewModels
@model SFA.DAS.RoatpGateway.Web.ViewModels.TwoInTwelveMonthsViewModel 

@{
    ViewBag.Title = $"Gateway - {Model.Heading}";
    Layout = "_Layout";
}

@{await Html.RenderPartialAsync("~/Views/Gateway/Pages/_GatewayAssessmentBreadcrumb.cshtml"); }
<main class="govuk-main-wrapper " id="main-content" role="main">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            @{await Html.RenderPartialAsync("~/Views/Gateway/Pages/_GatewayApprovalValidationSummary.cshtml"); }
            @{await Html.RenderPartialAsync("~/Views/Gateway/Pages/_GatewayHeader.cshtml"); }
        </div>
    </div>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <table class="govuk-table govuk-!-margin-bottom-9">
                <thead class="govuk-table__head">
                    <tr class="govuk-table__row">
                        <th class="govuk-table__header" scope="col">Application question</th>
                        <th class="govuk-table__header" scope="col">Applicant's answer</th>
                    </tr>
                </thead>
                <tbody class="govuk-table__body">
                    <tr class="govuk-table__row">
                        <td class="govuk-table__cell">Have you had 2 unsuccessful applications in the last 12 months?</td>
                        <td class="govuk-table__cell">
                            @Model.SubmittedTwoInTwelveMonths
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>




    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <table class="govuk-table govuk-!-margin-bottom-9">
                <tbody class="govuk-table__body">
                    <tr class="govuk-table__row">
                        <td class="govuk-table__cell">Outcome of check</td>
                        <td class="govuk-table__cell">
                            <strong class="das-task-list__task-tag das-tag das-tag--solid-purple das-no-wrap">Clarification</strong>
                        </td>
                    </tr>
                <tr class="govuk-table__row">
                    <td class="govuk-table__cell">Date of check</td>
                    <td class="govuk-table__cell">
                        @Model.ClarificationRequestedOn.ToSfaShortDateString()
                    </td>
                </tr>
                <tr class="govuk-table__row">
                    <td class="govuk-table__cell">Comments</td>
                    <td class="govuk-table__cell">
                        @Model.OptionClarificationText
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>


    @if (Model.GatewayReviewStatus == GatewayReviewStatus.New || Model.GatewayReviewStatus == GatewayReviewStatus.InProgress)
    {
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <form class="js-disable-on-submit" asp-action="EvaluateTwoInTwelveMonthsPage" asp-controller="RoatpGatewayOrganisationChecks">
                    <partial name="~/Views/Gateway/Pages/_GatewayApprovalSection.cshtml" />
                    <button class="govuk-button" type="submit">Save and continue</button>
                </form>
            </div>
        </div>
    }
    else
    {
        <partial name="~/Views/Gateway/Pages/_GatewayCheckOutcome.cshtml" />
    }
</main>